<h1>Add a New Address</h1>

<div id="address-new-form">
<%= form_for(current_user.addresses.new, role:"form") do |f| %>
  <div>
    <%= f.label :street %>
    <%= f.text_field :street, class: "form-control" %>
  </div>
  <div class="">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <div class="">
    <%= f.label :type %>
    <%= f.text_field :type, class: "form-control" %>
  </div>
  </div>
    <%= f.submit "Add Address", id: "check-in", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
