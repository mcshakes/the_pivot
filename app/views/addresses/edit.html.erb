<h1>Update Your Address</h1>

<div class="form">
  <%= form_for( :address, url: address_path, method: :put) do |f| %>
    <p>
      <%= f.label :street %>
      <%= f.text_field :street, class: "form-control" %>
    </p>
    <p>
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </p>
    <p>
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </p>
    <p>
      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control" %>
    </p>
    <p>
      <%= f.submit "Update Address", id: "check-in", class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
