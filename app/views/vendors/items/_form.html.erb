<div class="form">
  <%= form_for [current_vendor, @item], :html => { :multipart => true } do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, id: "new-vendor-form" %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_field :description, id: "new-vendor-form" %>
    </p>
    <p>
      <%= f.label :price %><br />
      <%= f.text_field :price, id: "new-vendor-form" %>
    </p>
    <p>
      <%= f.label "Category:" %>
      <% Category.all.each do |category| %>
      <br><%= check_box_tag 'category_ids[]', category.id, @item.categories.include?(category)%>
        <%= category.name %>
      <% end %>
    </p>
    <p>
    <%= f.label "Status: ", class: "status-label" %>
    <%= f.select(:status, options_for_select([["active", "active"], ["retired", "retired"]]), selected: @item.status ) %>
    </p>
    <p>
    <%= f.label :select_image %><br />
    <%= f.file_field :image %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.hidden_field :vendor_id, value: current_vendor.id %>
    </p>
    <%= f.submit "Submit", class: 'btn btn-default'%>
  <% end %>
</div>
