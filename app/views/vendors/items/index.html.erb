<h1> Welcome to My Photo Store </h1>

<div class="col-sm-3">
  <% @items.each do |item| %>
    <p> image_tag <%= item.photo %> </p>
    <h3> Title: <%= item.name %> </h3> 
    <p> Description:<%= item.description %>  </p>
    <p> Price:<%= number_to_currency.item.price %> </p>
    <p> item.status </p>
  <% end %>
</div>