<div class="main">
  <h1> Welcome to <%= @vendor.name %>'s Photo Gallery</h1>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3 vendor-item">
        <p> <%= link_to image_tag(item.photo), vendor_item_path(slug: params[:slug], id:item.id),
              data: { toggle: "modal", target: "#modal", class: "modal-pic" } %>  </p>
        <p>  <%= link_to item.name, vendor_item_path(slug: params[:slug], id:item.id) %> </p>
        <p>  Description: <%= item.description %> </p>
        <p>  Price: <%= number_to_currency(item.price) %></p>
        <p> <%= item.status %> </p>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Modal title</h4>
    </div>
    <div class="modal-body">
      ...
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</div>
</div>
<!-- Modal End -->
