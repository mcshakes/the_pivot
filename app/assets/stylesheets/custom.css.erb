h1 {
  text-align: center;
  padding-bottom: 20px;
}

body {
  background-color: #000000 !important;
  padding: 0px !important;
  color: white;
}

.navbar {
  margin-bottom: 0px !important;
}

/*home page styling*/

.front-page {
  text-align: center;
}

.front-page-header span {
  font-size: .7em;
}

.pic {
  width: 100%;
  height: auto;
  border-radius: 20px;
}

.big-pic{
  padding-top: 1em;
  z-index: 1;
}

.little-pic {
  padding-top: 0.5em;
}

.store-name {
  color: grey;
}

.rand-vendor {

}

#hero-image {
  background: url("<%= asset_path("sydney-opera-house.jpg")%>");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  background-attachment: fixed;
}

#hero-msg {
  margin-top: 150px;
  margin-bottom: 100px;
  font-weight: bold;
  font-color: #ffffff !important;
  font-size: 3.5em;
}

#hero-footer {
  background: none repeat scroll 0% 0% rgba(0, 0, 0, 0.4);
  width: 100%;
  min-height: 100px;
  position: relative;
  padding: 10px;
  text-align: right;
  margin: 10px auto;
  }

.hero-footer-square {
  background-color: #d3d3d3;
  padding: 10px;
  opacity: 0.75;
  height: 75px;
  width: 130px;
  border-radius: 3px;
  border: 3px solid #dddddd;
  text-align: center;
  float: right;
  margin-left: 10px;
}

.hero-footer-link {
  text-transform: uppercase;
}

.hero-footer-link a{
  color: #000 !important;
}

#home-page-pics {
  margin-top: 20px;
  text-align: center;
}
/*home page ends*/


.items {
  padding: 10px;
  border-radius: 25px;
  text-align: center;
  }

.item-title {
  text-align: center;
  font-weight: bold;
  font-size: 1.2em;
}

button.glyphicon {
  font-size:12px !important;
}

.image-background {
  display: inline-block;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  overflow: hidden;
  margin-left: auto;
  margin-right: auto;
  border: 5px solid #9c5619;
}

.logo-image-background {
  display: inline-block;
  width: 450px;
  height: 450px;
  overflow: hidden;
  margin-left: auto;
  margin-right: auto;
}

#admin-buttons {
  text-align: center;
}

#category-table {
  text-align: center;
}

#checkout-item {
  padding: 20px;
}

#checkout-total {
  background-color: grey;
  border-radius: 25px;
  padding: 20px;
  margin: 20px;
}

.menu-image {
  height: 150px;
  margin-left: auto;
  margin-right: auto;
}

.menu-buttons {
  margin: 0 auto !important;
}

.retired-item {
  clear: all;
  color: red;
  font-weight: bold;
}

.order_id_title {
  font-size: 1.2em;
}

.orders_color_white {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
}

.user_orders {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
  border: 1px solid black;
}

.modal {
  color: black;
}

.modal-content {
  padding: 35px;
  text-align: center;
}

.main {
  padding: 55px;
}

.v-item {
 text-align: center;
 border: 1px solid #333;
}

.v-item img {
  width: 100%;
}

/*vendor index styling*/

.category {
  margin-left: 35px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.category {
  margin-left: 35px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.category li {
  list-style-type: none;
  text-align: center;
}

.page_title {
  padding-top: 50px;
  color: #dedede;
}

.col-xs-4 {
  padding: 0 !important;
}

/*cart page*/
#cart-page {
  padding-top: 50px;
}
