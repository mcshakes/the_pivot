h1 {
  text-align: center;
  padding-bottom: 20px;
}

body {
  background-color: #000000 !important;
  padding: 0px !important;
  color: white;
}

.navbar {
  margin-bottom: 0px !important;
}

.row {
  text-align: center;
}

.flash {
  margin-top: 60px;
}

/*home page styling*/

.front-page {
  text-align: center;
}

.front-page-header span {
  font-size: .7em;
}

.pic {
  max-width: 100%;
  /*max-height: 100%;*/
  height: auto;
  display: block;
}

.big-pic{
  padding-top: 1em;
  z-index: 1;
  width: 99%;
}

#photo-left-border {
  border-left: dotted 5px black;
}

.little-pic {
  padding-top: 0.5em;
}

.store-name {
  color: grey;
}

.solo-item {
  margin: 0 auto;
  text-align: center;
}

#hero-image {
  background: url("<%= asset_path("mountain_flowers-1546069.jpg")%>");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  background-attachment: fixed;
}

#hero-msg {
  margin-top: 150px;
  margin-bottom: 100px;
  font-weight: bold;
  font-color: #ffffff !important;
  font-size: 3.5em;
}

#hero-footer {
  background: none repeat scroll 0% 0% rgba(0, 0, 0, 0.4);
  width: 100%;
  min-height: 100px;
  position: relative;
  padding: 10px;
  text-align: right;
  margin: 10px auto;
  }

.hero-footer-square {
  background-color: #d3d3d3;
  opacity: 0.75;
  height: 75px;
  width: 90px;
  border-radius: 3px;
  border: 3px solid #dddddd;
  text-align: center;
  float: right;
  margin-left: 10px;
  overflow: hidden;
}

.hero-footer-square img{
  width: auto;
  height: 65px;
  display: block;
  line-height:75px;
  margin-left: auto;
  margin-right: auto;
  padding: 3px;
  }

.hero-footer-link {
  text-transform: uppercase;
}

.hero-footer-link a{
  color: #000 !important;
}

#home-page-pics {
  margin-top: 20px;
  text-align: center;
}
/*home page ends*/


.photos {
  padding: 10px;
  border-radius: 5px;
  text-align: center;
  }

.item-title {
  text-align: center;
  font-weight: bold;
  font-size: 1.2em;
}

button.glyphicon {
  font-size:10px !important;
}

.photo-background {
  display: inline-block;
  width: 33.33333%;
  height: 70px;
  /*border-radius: 5%;*/
  overflow: hidden;
  margin-left: 0;
  margin-right: 0;
  margin-bottom: 10px;
  border: 5px solid #000000;
}

.logo-image-background {
  display: inline-block;
  width: 450px;
  height: 450px;
  overflow: hidden;
  margin-left: auto;
  margin-right: auto;
}

#admin-buttons {
  text-align: center;
}

#category-table {
  text-align: center;
}

#checkout-item {
  padding: 20px;
}

#checkout-total {
  background-color: grey;
  border-radius: 25px;
  padding: 20px;
  margin: 20px;
}

.menu-image {
  height: 150px;
  margin-left: auto;
  margin-right: auto;
}

.menu-buttons {
  margin: 0 auto !important;
}

.retired-item {
  clear: all;
  color: red;
  font-weight: bold;
}

.order_id_title {
  font-size: 1.2em;
}

.orders_color_white {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
}

.user-orders {
  background-color: #474747;
  border-radius: 10px;
  padding: 10px;
  border: 1px solid black;
  margin-bottom: 10px;
}

.modal {
  color: black;
}

.modal-content {
  text-align: center;
}

.main-vendor-items {
  padding: 55px;
  text-align: center;
}

.vendor-items {
 text-align: center;
}

.vendor-items img {
  width: 75%;
}

/*vendor index styling*/

.category {
  margin-left: 35px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.category {
  padding-top: 5px;
  padding-bottom: 5px;
}

.category li {
  list-style-type: none;
  text-align: center;
}

.page_title {
  padding-top: 50px;
  color: #dedede;
}

.col-xs-4 {
  padding: 0 !important;
}

#store-page {
  width: 50%
}

/*cart page*/
#cart-page {
  padding-top: 50px;
}


/* registration form */
.form {
  width: 366px;
  display:block;
  margin: 0 auto;
  padding: 30px;
  border: 3px solid white;
  border-radius: 20px;
}

#check-in {
  margin-top: 10px;
  border: 3px solid white;
}

/* error message for registration */

#error_explanation {
  color: red;
  padding-top: 40px;

  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

/* user view */

.user-view {
  text-align: center;
  padding: 20px;
}

#new-vendor-form {
  color: #000000;
}

/* vendors view */

.vendors-text {
   font-size: .9em;
}

/* glyphicon button */

.white {
  color: #fff;
 }

/* new vendor view */

.new-vendor-view {
  padding: 20px;
}
